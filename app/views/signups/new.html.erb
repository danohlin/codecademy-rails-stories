<div class="contact-main"> 
	<div class="content container">
			<h1>Sign up for our mailing list.</h1> 
			<div class="row"> 
				<div class="col-md-4 col-md-4-offset"></div> 
				<div class="col-md-4"> 
					
					<%= form_for(@signup) do |f| %> 
					<div class="form-group"> 
					<label>First name</label><%= f.text_field :firstname, :class => "form-control form-text" %> 
					<label>Email</label><%= f.text_field :email, :class => "form-control" %>
					</div> 
          			<%= f.submit "Join", :class => "btn btn-default" %> 
        			<% end %>


				</div> <div class="col-md-4 col-md-4-offset"></div> 
			</div>

	</div>
</div>
